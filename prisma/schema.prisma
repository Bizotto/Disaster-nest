generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Alert {
  id          String    @id @default(uuid()) @map("_id")
  category    String
  description String
  lat         Float
  long        Float
  status      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  Message     Message[]
}

model Message {
  id      String @id @default(uuid()) @map("_id")
  message String
  user    User   @relation(fields: [userId], references: [id])
  userId  String
  alert   Alert  @relation(fields: [alertId], references: [id])
  alertId String
}

model User {
  id       String    @id @default(uuid()) @map("_id")
  name     String?
  email    String
  password String
  Message  Message[]
}
